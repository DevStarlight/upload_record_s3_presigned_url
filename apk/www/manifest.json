{
    // Required
    "manifest_version": 2,
    "name": "My Extension",
    "version": "0.1",

    // Recommended
    "default_locale": "en",
    "description": "description",
    "icons": {},

    // Pick one (or none)
    "browser_action": {},
    "page_action": {},

    // Optional
    "author": 'app',
    "background": {
        "persistent": false
    },
    "chrome_settings_overrides": {},
    "chrome_ui_overrides": {
        "bookmarks_ui": {
            "remove_bookmark_shortcut": true,
            "remove_button": true
        }
    },
    "externally_connectable": {
        "matches": ["https://your_api_url/*"]
    },
    "file_system_provider_capabilities": {
        "configurable": true,
        "multiple_mounts": true,
        "source": "network"
    },
    "homepage_url": "http://xxxxxx.com",
    "offline_enabled": true,
    "permissions": [
        "https://your_api_url/*"
    ]
}
